{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@spartan-ng/ui-accordion-helm": [
        "./src/app/components/ui/ui-accordion-helm/src/index.ts"
      ],
      "@spartan-ng/ui-avatar-helm": [
        "./src/app/components/ui/ui-avatar-helm/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        "./src/app/components/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./src/app/components/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./src/app/components/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./src/app/components/ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-skeleton-helm": [
        "./src/app/components/ui/ui-skeleton-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./src/app/components/ui/ui-spinner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./src/app/components/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sheet-helm": [
        "./src/app/components/ui/ui-sheet-helm/src/index.ts"
      ],
      "@spartan-ng/ui-tooltip-helm": [
        "./src/app/components/ui/ui-tooltip-helm/src/index.ts"
      ],
      "@spartan-ng/ui-select-helm": [
        "./src/app/components/ui/ui-select-helm/src/index.ts"
      ],
      "@spartan-ng/ui-separator-helm": [
        "./src/app/components/ui/ui-separator-helm/src/index.ts"
      ],
      "@spartan-ng/ui-scrollarea-helm": [
        "./src/app/components/ui/ui-scrollarea-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
